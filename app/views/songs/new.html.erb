<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre_id, "Genre" %>
  <%= f.text_field :genre_id, list: "genre_autocomplete" %><br>

  <datalist id="genre_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.id%>"><%= genre.name %></option>
    <% end %>
  </datalist>
  <br>

  <input name="song[notes_contents][]" id="song_notes_1">
  <input name="song[notes_contents][]" id="song_notes_2">

  <%= f.submit %>
<% end %>


